--- layout: layout.njk ---

<h1>Eleventy blog</h1>

<div class="container">
    <div class="row">
        <div class="col-md-9">
            {% for post in collections.posts %}
                <div class="col-md-6">
                    <article class="custom-article">
                        <a href="{{ post.url | url }}">
                            <img class="article-thumbnail img-responsive" src="{{ post.data.header_picture }}" alt="photo">
                            <header>
                                <h2 class="article-title">
                                    {{post.data.title}}</h2>
                            </header>
                            <div class="article-content">
                                <p>
                                    {{ post.data.summary }}</p>
                            </div>
                            <div class="card-footer text-muted d-flex justify-content-between bg-transparent border-top-0">
                                <img style="border-radius: 50%; float: left;" src="{{ post.data.publisher_picture }}" alt="Avatar of Jonathan Reinink">
                                <div class="container">
                                    <p class="text-gray-900 leading-none">Jonathan Reinink</p>
                                    <p class="text-gray-600">Aug 18</p>
                                </div>
                            </div>
                        </a>
                    </article>
                </div>
            {% endfor %}
        </div>
        <div class="col-md-3">
            <aside class="aside-container">
                <h2 class="aside-title">Categories</h2>
                <ul class="aside-list">
                    <li>
                        <a href="">PHP Tutorials</a>
                    </li>
                    <li>
                        <a href="">Blog Tutorials</a>
                    </li>
                </ul>
            </aside>
            <aside class="aside-container">
                <h2 class="aside-title">Meilleurs sujets</h2>
                <ul class="aside-list">
                    <li>
                        <a href="">PHP Tutorials</a>
                    </li>
                    <li>
                        <a href="">Blog Tutorials</a>
                    </li>
                </ul>
            </aside>
        </div>
    </div>
</div>